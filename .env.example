# TeamWork - Virtual Dev Team Configuration
# Copy this file to .env and fill in your API keys

# Required: Anthropic API key for Claude agents
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: OpenAI API key for AI-generated profile images
# If not provided, agents will use colored initials avatars
OPENAI_API_KEY=your-openai-api-key-here


# cat ~/.claude.json | base64
CLAUDE_CONFIG_BASE64=<paste the long base64 string>

# Optional: Override default paths (usually not needed)
# Both Docker and local dev use these same paths at project root
DATABASE_URL=sqlite+aiosqlite:///./vteam.db
# Workspace
WORKSPACE_PATH=./workspace


# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Agent Runtime
DEFAULT_AGENT_RUNTIME=docker

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ============================================
# Task Retry Configuration
# ============================================
# Maximum number of retries before moving task back to TODO
MAX_TASK_RETRIES=3

# Delay in seconds between retry attempts
TASK_RETRY_DELAY_SECONDS=5

# ============================================
# PM (Product Manager) Monitoring Configuration
# ============================================
# How often (in seconds) the PM checks on project progress
# Default: 300 (5 minutes)
PM_CHECK_INTERVAL_SECONDS=300

# How long (in minutes) before a developer with an active task is considered idle
# Default: 30 minutes
PM_IDLE_THRESHOLD_MINUTES=30

# Whether the PM should automatically nudge idle developers
# Set to false to disable automatic check-ins
PM_AUTO_NUDGE=true

# ============================================
# ============================================
# Model Configuration
# ============================================
# Override the default models used by different components
# Using dateless versions (e.g. claude-sonnet-4-5) always points to latest

# Model for onboarding/project analysis (default: haiku for speed)
MODEL_ONBOARDING=claude-haiku-4-5

# Model for PM interactions
MODEL_PM=claude-sonnet-4-5

# Model for simple agent tasks
MODEL_AGENT_SIMPLE=claude-haiku-4-5

# Model for moderate complexity tasks
MODEL_AGENT_MODERATE=claude-sonnet-4-5

# Model for complex tasks
MODEL_AGENT_COMPLEX=claude-opus-4-5
